<%- include('partials/header.ejs')%>

  <body>
    <%- include('partials/navbar')%>
      <div class="container">
        <h1 class="mt-4 mb-3">Faça uma pergunta!</h1>
        <hr>
        <a href="/perguntas" class="btn btn-primary">Perguntar</a>
        <hr>

        <% for (pergunta of perguntas) {%>
          <div class="card mt-4">
            <div class="card-header">
              <small class="text-muted">Anônimo perguntou:</small>
              <h3>
                <%= pergunta.titulo %>
              </h3>
            </div>
            <div class="card-body">
              <p>
                <%= pergunta.descricao%>
              </p>
              <hr>
              <a href="/pergunta/<%= pergunta.id %>" class="btn btn-primary">Responder</a>
            </div>
          </div>
          <% }%>
      </div>

  </body>
  <%- include('partials/footer.ejs') %>
